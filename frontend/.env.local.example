# SecureStore Frontend Configuration
# Copy this file to .env.local and update the values for your environment

# API Configuration
# Set this to match your SecureStore API server location
# For HA setup: use the nginx load balancer endpoint
# Examples:
#   - Local dev: http://localhost:3000 (uses same origin)
#   - HA setup: http://localhost (nginx on port 80)
#   - Remote: https://api.example.com

# REACT_APP_API_URL=http://localhost

# App Configuration
REACT_APP_APP_NAME=SecureStore
REACT_APP_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_MFA=true
REACT_APP_ENABLE_OAUTH2=true
REACT_APP_ENABLE_AUDIT_LOGS=true
REACT_APP_ENABLE_COMPLIANCE=true

# Debug Mode (set to 'true' for verbose logging)
REACT_APP_DEBUG=false

# Edition (community or enterprise)
REACT_APP_EDITION=community
