# IMPORTANT: For subdomain testing, DO NOT set REACT_APP_API_URL
# The app will automatically use the correct subdomain URL
# 
# For development with subdomains:
# - alpha.localhost:3000 → API calls go to alpha.localhost (port 80 via proxy)
# - beta.localhost:3000 → API calls go to beta.localhost (port 80 via proxy)
# - localhost:3000 → API calls go to localhost (port 80 via proxy)
#
# REACT_APP_API_URL=http://localhost
REACT_APP_PROXY_URL=http://localhost

# Backend port (leave empty for port 80, or specify if different)
# In development with HA setup, backend runs on port 80 (nginx load balancer)
# In development with single container setup, backend runs on port 8080
# Set to empty string for HA mode, or 8080 for single container mode
REACT_APP_BACKEND_PORT=

# Erasure Coding Configuration (for UI display)
SECURESTOR_APP_ERASURE_DATA_SHARDS=4
SECURESTOR_APP_ERASURE_PARITY_SHARDS=2

# SecureStore Frontend Environment Configuration
# Copy this file to .env for local development

# =============================================================================
# MULTI-TENANT CONFIGURATION (Enterprise SaaS)
# =============================================================================

# Base domain for your application
# Production: securestor.io (subdomains: alpha.securestor.io, beta.securestor.io)
# Development: localhost (subdomains: alpha.localhost, beta.localhost)
REACT_APP_BASE_DOMAIN=localhost

# Default tenant when no subdomain is detected
# This tenant is used when accessing the root domain without subdomain
REACT_APP_DEFAULT_TENANT=admin

# Enable development mode features
# - Manual tenant switching via TenantSwitcher component
# - Additional console logging
# - localStorage overrides for tenant testing
REACT_APP_DEV_MODE=true

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Base URL (optional override)
# If not set, automatically uses current hostname to preserve tenant context
# Only set this if you need to point to a different API server
# REACT_APP_API_URL=http://localhost:8080

# API Version
# REACT_APP_API_VERSION=v1

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Token expiry time (in milliseconds)
# REACT_APP_TOKEN_EXPIRY=3600000

# Enable remember me feature
# REACT_APP_ENABLE_REMEMBER_ME=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
REACT_APP_ENABLE_TENANT_SWITCHER=true
REACT_APP_ENABLE_REALTIME_UPDATES=true
REACT_APP_ENABLE_ANALYTICS=false

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================

# Theme
# REACT_APP_THEME=light

# Items per page for pagination
# REACT_APP_ITEMS_PER_PAGE=20

# Enable debug mode
REACT_APP_DEBUG=false

# =============================================================================
# SECURITY
# =============================================================================

# Content Security Policy (CSP)
# REACT_APP_CSP_ENABLED=true

# Enable HTTPS only in production
# REACT_APP_FORCE_HTTPS=false

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Google Analytics ID
# REACT_APP_GA_TRACKING_ID=

# Sentry DSN for error tracking
# REACT_APP_SENTRY_DSN=

# =============================================================================
# DEVELOPMENT HELPERS
# =============================================================================

# Show tenant info in UI
REACT_APP_SHOW_TENANT_INFO=true

# Enable verbose logging
REACT_APP_VERBOSE_LOGGING=true

# Mock API responses (for offline development)
# REACT_APP_MOCK_API=false

# =============================================================================
# NOTES
# =============================================================================
# 
# SUBDOMAIN ROUTING:
# - alpha.localhost:3000 -> Tenant: alpha
# - beta.localhost:3000 -> Tenant: beta
# - localhost:3000 -> Tenant: admin (default)
#
# To test subdomains locally, add to /etc/hosts:
#   127.0.0.1 alpha.localhost
#   127.0.0.1 beta.localhost
#   127.0.0.1 admin.localhost
#
# PRODUCTION DEPLOYMENT:
# 1. Set REACT_APP_BASE_DOMAIN to your production domain
# 2. Set REACT_APP_DEV_MODE=false
# 3. Configure DNS wildcards: *.securestor.io -> your server
# 4. Set up SSL certificates for wildcard domain
#
# =============================================================================

# Edition (community or enterprise)
REACT_APP_EDITION=community